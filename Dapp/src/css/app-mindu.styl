/* app global css in STYLUS form */

/* general TAG/body classes */
	@font-face {
		font-family: 'Diodrum Rounded';
		src: url('./fonts/DiodrumRounded-Medium.otf');
	}

	.projectFont {
		font-family: 'Diodrum Rounded';
	}
	
	BODY {
		@extend .projectFont;
		min-height: 1400px;
	}	

/* element classes */

	.rounded {
		border-radius: 28px!important;
	}
	
	.rounded-left {
		border-radius: 28px 0 0 28px!important;
	}

	.gradient  {
		@extend .rounded;
		background: linear-gradient(88.16deg, #223269 3.7%, #00DEA3 96.27%);
	}
	
	.gradientReverse  {
		@extend .rounded;
		background: linear-gradient(88.16deg, #00DEA3 3.7%, #223269 96.27%)!important;
	}	

	.regularButton {
		@extend .gradient;
		font-size: 1.3em;
		padding-left: 25px!important;
		padding-right: 25px!important;
		min-width: 90px!important;
	}
	
	.shapeButton {
		font-size: 1em;
		padding-left: 20px!important;
		padding-right: 20px!important;
		min-width: 50px!important;	
	}
	
	.smallButton {
		@extend .gradient, .shapeButton;
	}
	
	.roundedSmallCorners {
		border-radius: 8px;
	}